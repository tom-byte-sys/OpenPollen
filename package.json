{
  "name": "openpollen",
  "version": "0.1.11",
  "description": "安全、易用、可扩展的开源 AI Agent 框架",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "openpollen": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:ui": "npx vite build --config ui/vite.config.ts ui",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/ cli/ plugins/",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bash scripts/release.sh",
    "release:minor": "bash scripts/release.sh minor",
    "release:major": "bash scripts/release.sh major"
  },
  "keywords": [
    "ai",
    "agent",
    "dingtalk",
    "claude",
    "chatbot"
  ],
  "author": "OpenPollen Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/tom-byte-sys/OpenPollen.git"
  },
  "files": [
    "dist/",
    "skills/",
    "openpollen.json.example",
    "README.md",
    "README.en.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.42",
    "@clack/prompts": "^1.0.1",
    "@larksuiteoapi/node-sdk": "^1.59.0",
    "@sinclair/typebox": "^0.34.0",
    "commander": "^13.0.0",
    "discord.js": "^14.16.0",
    "dingtalk-stream": "^2.1.4",
    "imapflow": "^1.0.0",
    "json5": "^2.2.3",
    "mailparser": "^3.7.0",
    "nodemailer": "^6.9.0",
    "@slack/socket-mode": "^2.0.0",
    "@slack/web-api": "^7.0.0",
    "pino": "^9.0.0",
    "pino-pretty": "^13.0.0",
    "sql.js": "^1.11.0",
    "undici": "^7.22.0",
    "uuid": "^11.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@noble/ed25519": "^3.0.0",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^22.0.0",
    "@types/nodemailer": "^6.4.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "dompurify": "^3.3.1",
    "eslint": "^9.0.0",
    "lit": "^3.3.2",
    "marked": "^17.0.2",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
